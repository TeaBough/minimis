= stylesheet_link_tag    'application', 'siret', media: 'all'
.site-wrapper
  .site-wrapper-inner
    .cover-container
      .inner.cover
        #flash_message.center
          - if flash.alert
            .alert.alert-danger
              = flash.alert
        %h1.cover-heading Minimis
        %p.lead Entrez votre Siret pour récupérer vos aides publiques perçues
        %p.lead
        = form_tag(url_for({controller: :siret, action: :update}), class: 'form-inline', method: 'PATCH') do |f|
          .form-group.form-group-lg
            = text_field_tag :siret, nil, :class => "form-control", :placeholder => "Entrez votre Siret", :id => "siret"
            = submit_tag "Go", class: %w(btn btn-lg btn-success), data: { disable_with: "Go", submit: true}
