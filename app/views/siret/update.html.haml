.container
  .page-header
    %h1 Minimis
  .panel.panel-default
    .panel.panel-heading
      %h2.panel-title
        = @entreprise.raison_social
    .panel.panel-body
      %dl.dl-horizontal
        %dt
          Siret :
        %dd
          = @entreprise.siret
        %dt Adresse :
        %dd
          = @entreprise.l1
          %br
          = @entreprise.l2
          %br
          = @entreprise.l3

  %h2 Subventions réalisés
  %table.table.table-striped
    %thead
      %tr
        %th Dossier
        %th Fond
        %th Montant
    %tbody
    - @subventions.each do |subvention|
      %tr
        %td
          = subvention.LibDossier
        %td
          = subvention.LibelleFonds
        %td
          = subvention.TotalDepRetvalidAC
